package com.cice.ejercicios;

import java.util.Scanner;

public class MainEjercicio05 {

	public static void main(String[] args) {
		
    // 5- Programa Java que lee un número entero por teclado y obtiene y muestra 
	// por pantalla el doble y el triple de ese número.

	int numero = 0;
	Scanner sc = new Scanner(System.in);
	
	System.out.println("Introduce un número por pantalla");
	numero = sc.nextInt();
	
	int doble = numero*2;
	int triple = numero*3;
	
	System.out.println("El doble del número introducido es: "+doble);
	System.out.println("El triple del número introducido es: "+triple);	
   }
}
